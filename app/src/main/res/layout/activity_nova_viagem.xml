<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".NovaViagem">

    <TextView
        android:id="@+id/id_usuario_nova_viagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/destino"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:background="#DFDCDC"
                    android:textColor="#0C0C0C"
                    android:padding="10dp"
                    android:hint="Destino"
                    android:inputType="text"
                    android:textColorHint="#0C0C0C"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <Spinner
                    android:id="@+id/spinner_tipo_viagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="40sp"
                    android:gravity="start"
                    android:background="#DFDCDC"
                    android:textColor="#959595"
                    android:padding="10dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#959595"
                    android:prompt="@string/tipo_viagem_prompt"
                    android:entries="@array/tipo_viagem_arrays"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/chegada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:background="#DFDCDC"
                    android:textColor="#0C0C0C"
                    android:padding="10dp"
                    android:text="Data de Chegada"
                    android:textColorHint="#0C0C0C" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal">

                <DatePicker
                    android:id="@+id/data_picker_chegada"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/partida_viagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:background="#DFDCDC"
                    android:textColor="#0C0C0C"
                    android:padding="10dp"
                    android:text="Data de Partida"
                    android:textColorHint="#0C0C0C" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_horizontal">

                <DatePicker
                    android:id="@+id/data_picker_partida"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/orcamento_viagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:background="#DFDCDC"
                    android:textColor="#0C0C0C"
                    android:padding="10dp"
                    android:hint="OrÃ§amento"
                    android:inputType="numberDecimal"
                    android:textColorHint="#0C0C0C"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <Button
                    android:id="@+id/salvar_nova_viagem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="Salvar"/>
<!--                    android:onClick="salvar_nova_viagem"/>-->
            </TableRow>
        </TableLayout>

    </ScrollView>

</FrameLayout>