<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".view.NovoGasto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarSize="@android:dimen/thumbnail_height">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/valor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#DFDCDC"
                    android:gravity="start"
                    android:hint="Valor"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="#0C0C0C"
                    android:textColorHint="#939292"
                    android:textSize="15sp"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/chegada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#939292"
                    android:padding="10dp"
                    android:text="Data do Gasto"/>

                <DatePicker
                    android:id="@+id/data_picker_gasto"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/descricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#DFDCDC"
                    android:gravity="start"
                    android:hint="Descrição"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#0C0C0C"
                    android:textColorHint="#939292"
                    android:textSize="15sp"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/local_gasto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#DFDCDC"
                    android:gravity="start"
                    android:hint="Local"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#0C0C0C"
                    android:textColorHint="#939292"
                    android:textSize="15sp"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/tipo_gasto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#DFDCDC"
                    android:gravity="start"
                    android:hint="Tipo (Alimentação, Combustível, Hospedagem, Extras)"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#0C0C0C"
                    android:textColorHint="#939292"
                    android:textSize="15sp"
                    android:autofillHints="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="fill_horizontal">

                <Button
                    android:id="@+id/salvar_novo_gasto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:layout_margin="4dp"
                    android:text="Salvar"/>

                <Button
                    android:id="@+id/voltar_novo_gasto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:layout_margin="4dp"
                    android:text="Voltar"/>
            </TableRow>

        </TableLayout>

    </ScrollView>

</FrameLayout>